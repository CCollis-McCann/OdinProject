function Book(title, author, pages, read) {
  this.title = title;
  this.author = author;
  this.pages = pages;
  this.read = read;
  this.info = function() {
    return `The ${this.name} by ${this.author}, ${this.pages} pages, ${this.read}`;
    //"The Hobbit by J.R.R. Tolkien, 295 pages, not read yet";
  };
}
